{
  "name": "holistic-smm.ru.src",
  "version": "1.0.0",
  "repository": "git@github.com:igorkamyshev/holistic-smm.ru.src.git",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf .cache && rimraf dist && parcel build src/pages/index.pug && node postparcel.js",
    "dev": "rimraf .cache && parcel src/pages/index.pug",
    "s": "yarn soda",
    "spell": "yaspeller ./src/data",
    "ci": "yarn s lint && yarn spell"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "@solid-soda/scripts": "^2.1.0",
    "parcel-bundler": "^1.12.4",
    "pug": "^2.0.4",
    "rimraf": "^3.0.2",
    "sharp": "^0.25.2",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn soda lint-staged && yarn spell",
      "commit-msg": "yarn soda commitlint"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
